<!DOCTYPE html>
<html>
<head>
  <title>Match</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li><%= link_to 'Home', users_path %></li>
          <li class="dropdown"></li>
        </ul>


        <%= form_tag(search_path, :method => "get", class: "navbar-form navbar-left", role: "search") do %>
          <%= text_field_tag :search, params[:name], class: "form-control", placeholder: "Name" %>
          <button type="submit" class="btn btn-default">Look up</button>

        <% end %>

        <ul class="nav navbar-nav navbar-right">
          <!-- <li><a href="/account/new">Sign up</a> </li> -->
          <li><%= link_to 'Sign Up', new_user_path%></li>
          <li><%= link_to 'log in', login_path%></li>
          <li><%= link_to 'log out', logout_path, method: 'delete' %></li>
          <li><a href="#">Designers</a></li>
          <li><a href="#">Developers</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<%= yield %>

</body>
</html>
